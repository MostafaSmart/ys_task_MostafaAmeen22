<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ys_task_MostafaAmeen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Ys_task_MostafaAmeen" parent="Base.Theme.Ys_task_MostafaAmeen" />


    <style name="PinButtonStyle">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CardPressed">
        <item name="cardBackgroundColor">@color/lite_blue</item>
        <item name="cardCornerRadius">15dp</item>

    </style>

    <style name="CardDefault">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">15dp</item>

    </style>
    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primmery</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:background">@drawable/btn_background</item>
    </style>
    <style name="AppTheme.claareBtn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primmery</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:background">@drawable/clear_bttn</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>