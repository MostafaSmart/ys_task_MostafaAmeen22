<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="671dp"
    android:layout_height="423dp"
    app:cardCornerRadius="8dp"
    android:layout_gravity="center"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="36dp"
        android:gravity="center"

        android:paddingTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:text="Choose your preferred language"
            android:textSize="20dp"
            android:textColor="@color/primmery"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="24sp"
          />


        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="2"
android:layout_gravity="center"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView

                android:id="@+id/btnArabic"
                android:layout_marginEnd="41dp"
                style="@style/CardDefault"
                android:layout_width="279dp"
                android:layout_marginBottom="36dp"
                android:layout_height="72dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                   android:paddingTop="16dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginStart="44dp"
                        android:layout_marginEnd="32dp"
                        android:src="@drawable/ic_arabic_language"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اللغة العربية "
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/btnEnglsh"
                style="@style/CardDefault"
                android:layout_width="279dp"
                android:layout_height="72dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginStart="44dp"
                        android:layout_marginEnd="32dp"
                        android:src="@drawable/ic_english"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:id="@+id/btnFrainsh"
                style="@style/CardDefault"

                android:layout_width="279dp"
                android:layout_height="72dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginStart="44dp"
                        android:layout_marginEnd="32dp"
                        android:src="@drawable/ic_french_language"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="france"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>


        <com.rey.material.widget.Button
            android:background="@drawable/dialog_background"
            android:layout_width="330dp"
            android:layout_height="56dp"
            android:id="@+id/btnSaveLang"

            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            style="@style/TextAppearance.MaterialComponents.Button"
            android:text="Save"
            app:rd_enable="true"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>
